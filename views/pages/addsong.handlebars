<div class="row">
    <div class="col-sm-12">
        <h1>Add Song to Playlist: {{playlist.title}}</h1>

        <div>
            {{message}}
        </div>

        <form id="addsong-form" action="/addsong/{{playlist._id}}" method="post">
            <div class="form-group">
                <label for="username">Song Name:</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Enter the name of a song.">
            </div>

            <div class="form-group">
                <button type="submit">Add</button>
            </div>
        </form>
    </div>
</div>


